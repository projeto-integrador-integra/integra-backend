{
  "name": "integra-backend",
  "version": "1.0.0",
  "main": "dist/main.js",
  "scripts": {
    "test": "vitest run",
    "test:watch": "vitest",
    "docker:up": "docker compose up -d",
    "docker:down": "docker compose down",
    "build": "tsc && tsc-alias",
    "start": "node --env-file=.env dist/main.js",
    "prestart": "npm run build",
    "watch:app-dev": "NODE_ENV=development AWS_PROFILE=dev tsx watch src/main.ts",
    "watch:app-local-prod": "NODE_ENV=production AWS_PROFILE=dev tsx watch src/main.ts",
    "start:dev": "npm run docker:up && concurrently -k -n EMAIL,APP -c blue,green \"npm run watch:emails\" \"npm run watch:app-dev\"",
    "start:local-prod": "npm run docker:up && concurrently -k -n EMAIL,APP -c blue,green \"npm run watch:emails\" \"npm run watch:app-local-prod\"",
    "db:push": "npx drizzle-kit push",
    "prepare": "husky",
    "lint": "eslint . --ext .ts,.tsx",
    "format": "prettier --write .",
    "db:seed": "tsx src/seed/index.ts",
    "package": "bash scripts/package.sh",
    "watch:emails": "chokidar \"src/emails/**/*\" \"!src/emails/templates/**/*\"  -c \"npm run email:generate\"",
    "email:generate": "tsx src/scripts/generate-emails.tsx",
    "email:build": "email build",
    "email:dev": "email dev --dir=src/emails"
  },
  "lint-staged": {
    "*.{ts,js}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.json": [
      "prettier --write"
    ]
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "dependencies": {
    "@asteasolutions/zod-to-openapi": "^7.3.0",
    "@aws-sdk/client-cognito-identity-provider": "^3.787.0",
    "@aws-sdk/client-ssm": "^3.787.0",
    "@react-email/components": "^0.0.36",
    "@react-email/render": "^1.0.6",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^16.5.0",
    "drizzle-orm": "^0.41.0",
    "express": "^5.1.0",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.2",
    "jwks-rsa": "^3.2.0",
    "pg": "^8.14.1",
    "resend": "^4.4.1",
    "serverless-http": "^3.2.0",
    "swagger-ui-express": "^5.0.1",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.0",
    "@commitlint/config-conventional": "^19.8.0",
    "@eslint/js": "^9.24.0",
    "@faker-js/faker": "^9.6.0",
    "@types/aws-lambda": "^8.10.149",
    "@types/cookie-parser": "^1.4.8",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.1",
    "@types/node": "^22.14.0",
    "@types/pg": "^8.11.11",
    "@types/react": "^19.1.2",
    "@types/react-dom": "^19.1.2",
    "@types/swagger-ui-express": "^4.1.8",
    "chokidar-cli": "^3.0.0",
    "concurrently": "^9.1.2",
    "drizzle-kit": "^0.30.6",
    "eslint": "^9.24.0",
    "eslint-config-prettier": "^10.1.2",
    "husky": "^9.1.7",
    "lint-staged": "^15.5.1",
    "prettier": "^3.5.3",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-email": "^4.0.7",
    "tsc-alias": "^1.8.15",
    "tsx": "^4.19.3",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.29.1",
    "vitest": "^3.1.1"
  }
}
